@model IEnumerable<MySQL_Empleat.Models.Empleat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cognom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrec)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sou)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carrec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sou)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit",  new {  id=item.Id, nom=item.Nom, cognom=item.Cognom, carrec=item.Carrec, sou=item.Sou }) |
                @Html.ActionLink("Delete", "Delete",  new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
